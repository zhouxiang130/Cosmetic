<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dis15"
        android:paddingTop="@dimen/dis10"
        android:paddingRight="@dimen/dis20"
        android:paddingBottom="@dimen/dis10">

        <TextView
            android:id="@+id/store_address_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font15"/>

        <TextView
            android:id="@+id/store_address_tv_phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/store_address_tv_name"
            android:paddingLeft="@dimen/dis10"
            android:paddingRight="@dimen/dis10"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font15"/>

        <TextView
            android:id="@+id/store_address_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_address_tv_phoneNum"
            android:paddingTop="@dimen/dis8"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font15"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"/>
</LinearLayout>