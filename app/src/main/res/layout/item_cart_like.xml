<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/cart_like_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis95"
        android:layout_marginLeft="@dimen/dis8"
        android:layout_marginRight="@dimen/dis8"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_goods"
        />

    <TextView
        android:id="@+id/cart_like_detial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis2"
        android:background="@color/CF1_EC_E2"
        android:ellipsize="none"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dis3"
        android:paddingBottom="@dimen/dis3"
        android:singleLine="true"
        android:textColor="@color/C9F_8A_60"
        android:textSize="@dimen/font11"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/cart_like_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis8"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/C10_10_10"
        android:textSize="@dimen/font13"
        />

    <TextView
        android:id="@+id/cart_like_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dis10"
        android:textColor="@color/CC8_3C_3C"
        android:textSize="@dimen/font14"
        />
</LinearLayout>