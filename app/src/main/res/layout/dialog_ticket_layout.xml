<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dis10"
              android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_ticket_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dis15"
            android:paddingBottom="@dimen/dis15"
            android:text="优惠券"
            android:textColor="@color/black_color1"
            android:textSize="@dimen/font16"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dis160"/>

            <LinearLayout
                android:id="@+id/ll_integral_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis180"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corner_e8_stroke0_5_radius8"
                    android:paddingLeft="@dimen/dis10"
                    android:paddingTop="@dimen/dis3"
                    android:paddingRight="@dimen/dis10"
                    android:paddingBottom="@dimen/dis3"
                    android:text="积分"
                    android:textColor="@color/Ce8_3c_3c"
                    android:textSize="@dimen/font15"/>

                <TextView
                    android:id="@+id/dialog_integral_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dis5"
                    android:text=""
                    android:textColor="@color/black_color1"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis60"
        android:padding="@dimen/dis10">

        <Button
            android:id="@+id/dialog_size_buy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis60"
            android:background="@drawable/shape_corner_e8_radius55"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"/>
    </RelativeLayout>
</LinearLayout>