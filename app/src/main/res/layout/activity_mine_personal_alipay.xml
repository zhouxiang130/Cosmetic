<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CF8_F8_F8">

    <include layout="@layout/titlebar_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"
        android:layout_marginTop="@dimen/dis8"
        />
    <EditText
        android:id="@+id/alipay_et_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis50"
        android:background="@color/white"
        android:hint="请输入支付宝账号"
        android:textSize="@dimen/font13"
        android:textColor="@color/C64_64_64"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:paddingLeft="@dimen/dis15"
        android:textColorHint="@color/C64_64_64"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"/>
    <EditText
        android:id="@+id/alipay_et_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis50"
        android:background="@color/white"
        android:hint="请输入支付宝真实姓名"
        android:textSize="@dimen/font13"
        android:textColor="@color/C64_64_64"
        android:singleLine="true"
        android:inputType="text"
        android:paddingLeft="@dimen/dis15"
        android:textColorHint="@color/C64_64_64"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"/>
    <Button
        android:id="@+id/mine_personal_alipay_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis40"
        android:background="@drawable/shape_corner_e8_radius2"
        android:text="保存"
        android:textSize="@dimen/font14"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dis15"
        android:layout_marginRight="@dimen/dis15"
        android:layout_marginTop="@dimen/dis22"/>
</LinearLayout>