<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE4_E4_E4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dis15"
            android:layout_marginBottom="@dimen/dis12"
            android:text="分享到"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font14"/>

        <ViewAnimator
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:layout_marginBottom="@dimen/dis15"
            android:background="#F0F0F0"/>

        <GridView
            android:id="@+id/dialog_share_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis10"
            android:layout_marginBottom="@dimen/dis15"
            android:listSelector="@color/white"
            android:numColumns="4"/>

        <Button
            android:id="@+id/dialog_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_pressed_gray"
            android:paddingTop="@dimen/dis15"
            android:paddingBottom="@dimen/dis15"
            android:text="取消分享"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font14"/>
    </LinearLayout>
</LinearLayout>