<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_hot_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_hot_iv1"
            android:layout_width="@dimen/dis90"
            android:layout_height="@dimen/dis90"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_goods"/>

        <TextView
            android:id="@+id/home_hot_tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis10"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dis10"
            android:paddingRight="@dimen/dis5"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font14"/>

        <TextView
            android:id="@+id/home_hot_tv_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis5"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dis10"
            android:paddingRight="@dimen/dis5"
            android:textColor="@color/C85_85_85"
            android:textSize="@dimen/font12"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/home_hot_tv_price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis5"
            android:layout_marginBottom="@dimen/dis10"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/dis10"
            android:paddingRight="@dimen/dis5"
            android:textColor="@color/CC8_3C_3C"
            android:textSize="@dimen/font14"/>
    </LinearLayout>
</LinearLayout>