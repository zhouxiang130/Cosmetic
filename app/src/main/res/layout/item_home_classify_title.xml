<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/home_classify_title_rl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dis34"
            android:background="@color/black"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dis18"
                android:paddingRight="@dimen/dis18"
                android:text="饭后甜点"
                android:textColor="@color/white"
                android:textSize="@dimen/font12"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/home_classify_title_iv"
            android:layout_width="@dimen/dis5"
            android:layout_height="@dimen/dis5"
            android:layout_below="@id/home_classify_title_rl"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_round360_e83"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>