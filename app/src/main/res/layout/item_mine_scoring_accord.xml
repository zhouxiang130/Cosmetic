<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/item_account_cost_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis8"
        android:background="@color/CF8_F9_FB"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dis15"
        android:paddingTop="@dimen/dis15"
        android:paddingRight="@dimen/dis15"
        android:paddingBottom="@dimen/dis10">

        <TextView
            android:id="@+id/scoring_accord_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/C40_40_40"
            android:textSize="@dimen/font14"/>

        <TextView
            android:id="@+id/scoring_accord_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scoring_accord_name"
            android:layout_marginTop="@dimen/dis12"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font11"/>

        <ImageView
            android:id="@+id/item_account_cost_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more_next"/>

        <TextView
            android:id="@+id/scoring_accord_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dis10"
            android:layout_toLeftOf="@id/item_account_cost_iv1"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font11"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"/>
</LinearLayout>