<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/CE7_E7_E7"
              android:orientation="vertical">

    <include layout="@layout/titlebar_layout"/>

    <com.yj.cosmetics.widget.UserDefineScrollView
        android:id="@+id/defineScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dis8"
                android:paddingLeft="@dimen/dis15"
                android:paddingRight="@dimen/dis15"
                android:paddingTop="@dimen/dis8"
                >


                <RelativeLayout
                    android:id="@+id/rl_refund_class_good_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis95"
                    android:paddingBottom="@dimen/dis5"
                    android:paddingTop="@dimen/dis5">

                    <RelativeLayout
                        android:id="@+id/order_list_goods_detial_rl1"
                        android:layout_width="@dimen/dis75"
                        android:layout_height="@dimen/dis75"
                        android:background="@drawable/shape_corner_dc_stroke1_white_radius2">

                        <ImageView
                            android:id="@+id/item_order_goods_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/dis4"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/default_goods"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/order_inner_goods_ll1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_settle_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/item_order_goods_tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-1dp"
                            android:layout_marginLeft="@dimen/dis3"
                            android:layout_toRightOf="@id/item_settle_tv1"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font13"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_order_goods_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:layout_marginRight="@dimen/dis15"
                        android:layout_toLeftOf="@id/order_inner_goods_ll1"
                        android:layout_toRightOf="@id/order_list_goods_detial_rl1"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="@color/C10_10_10"
                        android:textSize="@dimen/font14"/>

                    <TextView
                        android:id="@+id/item_order_goods_tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/item_order_goods_tv_title"
                        android:layout_marginBottom="@dimen/dis5"
                        android:layout_marginTop="@dimen/dis5"
                        android:textColor="@color/C64_64_64"
                        android:textSize="@dimen/font12"/>

                    <TextView
                        android:id="@+id/item_order_goods_tv_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_order_goods_tv_title"
                        android:layout_marginLeft="@dimen/dis18"
                        android:layout_marginRight="@dimen/dis15"
                        android:layout_marginTop="@dimen/dis5"
                        android:layout_toLeftOf="@id/item_order_goods_tv_number"
                        android:layout_toRightOf="@id/order_list_goods_detial_rl1"
                        android:textColor="@color/C85_85_85"
                        android:textSize="@dimen/font12"/>


                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/refund_rl_jintuikuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dis10">

                    <ImageView
                        android:id="@+id/icon_jintuilkuan_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dis5"
                        android:src="@mipmap/jintuikuan"/>

                    <TextView
                        android:id="@+id/tv_jituikuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_jintuilkuan_img"
                        android:padding="@dimen/dis4"
                        android:text="仅退款"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jituikuan"
                        android:layout_toRightOf="@id/icon_jintuilkuan_img"
                        android:padding="@dimen/dis4"
                        android:text="未收到货（包含未签收）或卖家协商同意前提下"
                        android:textSize="@dimen/font12"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dis5"
                        android:src="@mipmap/nex_p"/>

                </RelativeLayout>

            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis1"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/refund_rl_tuikuantuihuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dis10"
                    >
                    <!--android:paddingLeft="@dimen/dis10"-->
                    <!--android:paddingRight="@dimen/dis10"-->
                    <!--android:paddingTop="@dimen/dis5"-->
                    <!--android:paddingBottom="@dimen/dis5"-->

                    <ImageView
                        android:id="@+id/icon_tuikuan_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dis5"
                        android:src="@mipmap/tuikauntuihuo"/>

                    <TextView
                        android:id="@+id/tv_jituikuan_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/icon_tuikuan_img"
                        android:padding="@dimen/dis4"
                        android:text="退货退款"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_jituikuan_"
                        android:layout_toRightOf="@id/icon_tuikuan_img"
                        android:padding="@dimen/dis4"
                        android:text="已收到货，需要退掉已收到的货物"
                        android:textSize="@dimen/font12"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dis5"
                        android:src="@mipmap/nex_p"/>

                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>
        </LinearLayout>
    </com.yj.cosmetics.widget.UserDefineScrollView>
</LinearLayout>