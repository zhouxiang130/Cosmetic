<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_top_background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img_dialog_update_top_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/img_dialog_update_top_background"/>

            <RelativeLayout
                android:id="@+id/rl_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/img_dialog_update_top_background"
                android:layout_marginTop="@dimen/dis10"
                android:padding="@dimen/dis10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_close"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/img_dialog_update_tops"
                android:visibility="visible"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_buttom_update_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_white5_"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dis0.5"
                    android:layout_marginLeft="@dimen/dis20"
                    android:layout_weight="1"
                    android:background="@color/CE7_E7_E7"/>

                <TextView
                    android:id="@+id/update_dialog_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="发现新版本"
                    android:textColor="@color/C1E_1E_1E"
                    android:textSize="@dimen/font17"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dis0.5"
                    android:layout_marginRight="@dimen/dis20"
                    android:layout_weight="1"
                    android:background="@color/CE7_E7_E7"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dis12"
                android:layout_marginTop="@dimen/dis10"
                android:layout_marginRight="@dimen/dis12"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="版本:"
                    android:textColor="@color/C40_40_40"
                    android:textSize="@dimen/font16"/>

                <TextView
                    android:id="@+id/update_dialog_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis10"
                    android:text=""
                    android:textColor="@color/C40_40_40"
                    android:textSize="@dimen/font16"/>

                <TextView
                    android:id="@+id/up_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis18"
                    android:text="大小:"
                    android:textColor="@color/C40_40_40"
                    android:textSize="@dimen/font16"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/update_dialog_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis10"
                    android:text=""
                    android:textColor="@color/C40_40_40"
                    android:textSize="@dimen/font16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginTop="@dimen/x30"
                android:layout_marginRight="@dimen/x50"
                android:layout_marginBottom="@dimen/x30"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/update_dialog_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dis8"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/C40_40_40"
                    android:textSize="@dimen/font14"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x50"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/update_dialog_force"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_marginTop="@dimen/dis10"
                    android:layout_marginRight="@dimen/dis15"
                    android:layout_marginBottom="@dimen/dis10"
                    android:background="@drawable/shape_corner_colorprimary_radius55"
                    android:gravity="center"
                    android:paddingTop="@dimen/dis8"
                    android:paddingBottom="@dimen/dis8"
                    android:text="立即更新"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font17"
                    android:visibility="visible"/>

                <LinearLayout
                    android:id="@+id/update_dialog_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="@dimen/dis1"
                        android:layout_height="match_parent"
                        android:background="@color/CE4_E4_E4"/>

                    <TextView
                        android:id="@+id/update_dialog_update"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_color_bgradius5_right"
                        android:gravity="center"
                        android:paddingTop="@dimen/dis15"
                        android:paddingBottom="@dimen/dis15"
                        android:text="立即更新"
                        android:textColor="@color/C40_40_40"
                        android:textSize="@dimen/font17"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>