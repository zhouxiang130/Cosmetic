<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:id="@+id/item_account_profit_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis8"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dis10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dis15"
            android:paddingTop="@dimen/dis12"
            android:paddingRight="@dimen/dis15"
            android:paddingBottom="@dimen/dis10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dis105"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/item_seckill_iv"
                        android:layout_width="@dimen/dis85"
                        android:layout_height="@dimen/dis85"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_goods"/>
                </RelativeLayout>

                <com.yj.cosmetics.widget.CustomCountDownTimerViews
                    android:id="@+id/item_seckill_timer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/item_seckill_iv"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dis105"
                android:layout_marginLeft="@dimen/dis20"
                android:layout_weight="8"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_seckill_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/item_seckill_tv_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_above="@+id/linearLayout"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:textColor="@color/C85_85_85"
                    android:textSize="@dimen/font12"/>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_seckill_tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dis5"
                        android:textColor="@color/C64_64_64"
                        android:textSize="@dimen/font10"/>

                    <ProgressBar
                        android:id="@+id/item_seckill_pb"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="@dimen/dis60"
                        android:layout_height="@dimen/dis3"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar_horizontal_red"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_seckill_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/item_seckill_tv_confirm"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/CE8_3C_3C"
                        android:textSize="@dimen/font14"/>

                    <TextView
                        android:id="@+id/item_seckill_tv_op"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dis5"
                        android:textColor="@color/C85_85_85"
                        android:textSize="@dimen/font10"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_seckill_tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_e8_radius3"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dis15"
                    android:paddingTop="@dimen/dis2"
                    android:paddingRight="@dimen/dis15"
                    android:paddingBottom="@dimen/dis2"
                    android:text="马上抢"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE9_EC_ED"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>