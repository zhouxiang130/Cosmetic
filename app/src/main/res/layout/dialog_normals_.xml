<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dis32"
        android:layout_marginRight="@dimen/dis32"
        android:background="@drawable/shape_corner_white5">

        <TextView
            android:id="@+id/dialog_normal_title_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示"
            android:gravity="center"
            android:textColor="@color/C1E_1E_1E"
            android:layout_marginLeft="@dimen/dis20"
            android:layout_marginRight="@dimen/dis20"
            android:textSize="@dimen/font15"
            android:layout_marginTop="@dimen/dis22"
            />

        <TextView
            android:id="@+id/dialog_normal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/C1E_1E_1E"
            android:layout_marginLeft="@dimen/dis20"
            android:layout_marginRight="@dimen/dis20"
            android:textSize="@dimen/font15"
            android:lineSpacingExtra="@dimen/dis5"
            android:text=""
            android:layout_marginTop="@dimen/dis15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:layout_marginTop="@dimen/dis22"
            android:background="@color/CE7_E7_E7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dialog_normal_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确定"
                android:background="@drawable/selector_color_bgradius5_left"
                android:textSize="@dimen/font14"
                android:textColor="@color/C10_10_10"
                android:paddingTop="@dimen/dis15"
                android:paddingBottom="@dimen/dis15"
                android:visibility="visible"
                android:gravity="center"/>
            <View
                android:layout_width="@dimen/dis0.5"
                android:layout_height="match_parent"
                android:background="@color/CE7_E7_E7"/>
            <TextView
                android:id="@+id/dialog_normal_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:background="@drawable/selector_color_bgradius5_right"
                android:textSize="@dimen/font14"
                android:textColor="@color/C10_10_10"
                android:paddingTop="@dimen/dis15"
                android:paddingBottom="@dimen/dis15"
                android:gravity="center"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>