<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/CFA_FA_FA"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <View
        android:id="@+id/item_account_profit_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis15"
        android:background="@color/CF8_F9_FB"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:id="@+id/mine_coupon_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/mine_coupon_iv_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/youhuiquan_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_Layout_"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/line_aaa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:orientation="horizontal"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/mine_sign_text_ticket_price_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/mine_sign_text_ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="5"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/dis28"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/mine_sign_text_ticket_rebate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/white"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mine_sign_text_ticket_price_standard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line_aaa"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/dis8"
                        android:paddingRight="@dimen/dis8"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dis11"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/relative_Layout_"
                    android:layout_weight="7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="6dp">

                            <TextView
                                android:id="@+id/mine_sign_text_ticket_class"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:background="@drawable/shape_corner_oval_two"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="2dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/dis11"/>

                            <TextView
                                android:id="@+id/mine_sign_text_ticket_class_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="20dp"
                                android:ellipsize="end"
                                android:maxLength="12"
                                android:maxLines="1"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="2dp"
                                android:text=""
                                android:textColor="@color/C10_10_10"
                                android:textSize="@dimen/dis11"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/mine_sign_text_ticket_class_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:maxLines="1"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:text=""
                                android:textColor="@color/C99_99_99"
                                android:textSize="@dimen/dis10"/>

                            <TextView
                                android:id="@+id/mine_coupon_text_receive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/shape_corner_e8_stroke0_5_radius16"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingTop="2dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="2dp"
                                android:text="立即使用"
                                android:textColor="@color/CE8_3C_3C"
                                android:textSize="@dimen/dis10"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dis1"
                                android:layout_weight="0.2"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dis1"
                                android:layout_weight="5"
                                android:background="@color/CE4_E4_E4"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dis1"
                                android:layout_weight="0.2"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/mine_coupon_rl_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/mine_coupon_text_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@mipmap/youhuiquan_share"
                                android:drawablePadding="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:text="可分享"
                                android:textColor="@color/C99_99_99"
                                android:textSize="@dimen/dis10"/>

                            <TextView
                                android:id="@+id/mine_coupon_text_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mine_coupon_text_share"
                                android:drawablePadding="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="@dimen/dis5"
                                android:text="商品详情"
                                android:textColor="@color/C99_99_99"
                                android:textSize="@dimen/dis10"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/mine_coupon_text_content_titles"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/mine_coupon_text_content_title"
                                android:drawableLeft="@mipmap/hexiaoma"
                                android:drawablePadding="5dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="@dimen/dis5"
                                android:text="核销码"
                                android:textColor="@color/C99_99_99"
                                android:textSize="@dimen/dis10"
                                android:visibility="visible"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="5dp"
                                android:paddingTop="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp">

                                <ImageView
                                    android:id="@+id/mine_coupon_iv_indicate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/youhuiquan_zhankai"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/mine_coupon_iv_ticket_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:background="@mipmap/youhuiquan_yishiyong"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_coupon_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/mine_coupon_ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/share"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="分享给朋友"
                android:textColor="@color/C66_66_66"
                android:textSize="@dimen/dis13"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE4_E4_E4"/>

        <LinearLayout
            android:id="@+id/mine_coupon_ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/mine_coupon_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/dis5"
                android:paddingRight="@dimen/dis5"
                android:paddingBottom="@dimen/dis5"
                android:textColor="@color/C66_66_66"
                android:textSize="@dimen/dis13"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CE4_E4_E4"/>

        <LinearLayout
            android:id="@+id/mine_coupon_ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/mine_coupon_tv_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/dis5"
                android:paddingRight="@dimen/dis5"
                android:paddingBottom="@dimen/dis5"
                android:text=""
                android:textColor="@color/C66_66_66"
                android:textSize="@dimen/dis13"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dis15">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis15"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>