<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/frag_mine_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dis10"
        android:layout_marginRight="@dimen/dis10"
        android:layout_marginBottom="@dimen/dis2"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dis10">

            <RelativeLayout
                android:id="@+id/fl_store_list_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dis10"
                android:layout_marginRight="@dimen/dis10"
                android:gravity="center">


                <com.yj.cosmetics.widget.RoundedImageView.RoundedImageView
                    android:id="@+id/frag_mine_login_iv"
                    android:layout_width="@dimen/dis40"
                    android:layout_height="@dimen/dis40"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@mipmap/default_avatar"
                    app:riv_border_color="@color/white"
                    app:riv_border_width="@dimen/dis1"
                    app:riv_corner_radius="360dp"
                    />

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis5"
                    android:layout_toRightOf="@id/frag_mine_login_iv"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="哈哈哈"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font15"/>


                <TextView
                    android:id="@+id/tv_store_mon_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_store_name"
                    android:layout_marginLeft="@dimen/dis5"
                    android:layout_marginTop="@dimen/dis4"
                    android:layout_toRightOf="@id/frag_mine_login_iv"
                    android:text="月销2000"
                    android:textColor="@color/C8A_00_00_00"
                    android:textSize="@dimen/font12"/>

                <TextView
                    android:id="@+id/tv_go_to_soter_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_corner_e8_stroke0_5_radius16"
                    android:paddingLeft="@dimen/dis10"
                    android:paddingTop="@dimen/dis3"
                    android:paddingRight="@dimen/dis10"
                    android:paddingBottom="@dimen/dis3"
                    android:text="进店"
                    android:textColor="@color/CE8_3C_3C"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fl_store_list_iv"
                android:layout_marginLeft="@dimen/dis10"
                android:layout_marginTop="@dimen/dis10"
                android:layout_marginRight="@dimen/dis10"
                android:orientation="horizontal">

                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/store_recyle_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:scrollbars="none"-->
                <!--android:layout_height="wrap_content"/>-->
                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="true"
                    android:horizontalSpacing="@dimen/dis10"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/dis10"></GridView>

                <!--   <ImageView
                       android:id="@+id/store_list_iv1"
                       android:layout_width="0dp"
                       android:layout_height="@dimen/dis90"
                       android:layout_weight="1"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/default_goods"/>


                   <ImageView
                       android:id="@+id/store_list_iv2"
                       android:layout_width="0dp"
                       android:layout_height="@dimen/dis90"
                       android:layout_marginLeft="@dimen/dis15"
                       android:layout_marginRight="@dimen/dis15"
                       android:layout_weight="1"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/default_goods"/>

                   <ImageView
                       android:id="@+id/store_list_iv3"
                       android:layout_width="0dp"
                       android:layout_height="@dimen/dis90"
                       android:layout_weight="1"
                       android:scaleType="centerCrop"
                       android:src="@mipmap/default_goods"/>-->


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
