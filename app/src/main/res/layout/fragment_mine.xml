<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:splitMotionEvents="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis215"
                android:background="@color/CED_F1_F4">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis165"
                    android:background="@mipmap/certer_bg"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:id="@+id/frag_mine_info"
                    android:layout_width="@dimen/dis30"
                    android:layout_height="@dimen/dis30"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dis25"
                    android:layout_marginRight="@dimen/dis15">

                    <ImageView
                        android:layout_width="@dimen/dis22"
                        android:layout_height="@dimen/dis22"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dis3"
                        android:src="@mipmap/new_home"/>

                    <TextView
                        android:id="@+id/frag_mine_tv_info"
                        android:layout_width="@dimen/dis16"
                        android:layout_height="@dimen/dis16"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_round360_white"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/CE8_3C_3C"
                        android:textSize="@dimen/font11"
                        android:visibility="gone"/>
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/frag_mine_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis60"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dis17"
                    android:layout_marginRight="@dimen/dis15"
                    android:layout_marginBottom="@dimen/dis18"
                    android:background="@drawable/shape_corner_white_radius6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/frag_mine_account"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@mipmap/money_bag"
                                android:drawablePadding="@dimen/dis6"
                                android:text="账户余额 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font14"/>

                            <TextView
                                android:id="@+id/frag_mine_account_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font14"/>
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/dis1"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/dis20"
                            android:layout_marginBottom="@dimen/dis16"
                            android:background="@color/CD6_D6_D6"/>

                        <LinearLayout
                            android:id="@+id/frag_mine_scoring"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableLeft="@mipmap/choiceness"
                                android:drawablePadding="@dimen/dis6"
                                android:text="我的积分 "
                                android:textColor="@color/black"
                                android:textSize="@dimen/font14"/>

                            <TextView
                                android:id="@+id/frag_mine_tv_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font14"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/frag_mine_fram_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/frag_mine_ll"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_marginBottom="@dimen/dis18"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <com.yj.cosmetics.widget.RoundedImageView.RoundedImageView
                            android:id="@+id/frag_mine_login_iv"
                            android:layout_width="@dimen/dis60"
                            android:layout_height="@dimen/dis60"
                            android:layout_gravity="center_horizontal"
                            android:scaleType="fitXY"
                            android:src="@mipmap/default_avatar"
                            app:riv_border_color="@color/white"
                            app:riv_border_width="@dimen/dis1"
                            app:riv_corner_radius="360dp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/frag_mine_login_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dis10"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mine_new_tv_login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="11"
                            android:text="点击登录"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font18"/>

                        <TextView
                            android:id="@+id/mine_new_tv_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis8"
                            android:drawableLeft="@mipmap/mobile_fill"
                            android:drawablePadding="@dimen/dis5"
                            android:paddingTop="@dimen/dis2"
                            android:paddingRight="@dimen/dis7"
                            android:paddingBottom="@dimen/dis2"
                            android:textColor="@color/CEB_CD_82"
                            android:textSize="@dimen/font11"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/frag_mine_iv_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/dis5"
                            android:paddingLeft="@dimen/dis45"
                            android:paddingTop="@dimen/dis15"
                            android:paddingRight="@dimen/dis15"
                            android:paddingBottom="@dimen/dis15"
                            android:src="@mipmap/next_center"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_order_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis50">

                    <TextView
                        android:id="@+id/mine_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis18"
                        android:text="我的订单"
                        android:textColor="@color/C10_10_10"
                        android:textSize="@dimen/font14"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dis15"
                        android:drawableRight="@mipmap/next_center_order"
                        android:drawablePadding="@dimen/dis4"
                        android:gravity="center"
                        android:text="查看全部"
                        android:textColor="@color/C64_64_64"
                        android:textSize="@dimen/font12"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis75"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/frag_mine_order_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawableTop="@mipmap/news_fill"
                            android:drawablePadding="@dimen/dis8"
                            android:text="待付款"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_pay_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv1"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawableTop="@mipmap/present_fill"
                            android:drawablePadding="@dimen/dis8"
                            android:text="待发货"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_send_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv2"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_get"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawableTop="@mipmap/deliver_fill"
                            android:drawablePadding="@dimen/dis8"
                            android:text="待收货"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_get_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv3"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/frag_mine_order_judge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/frag_mine_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dis6"
                            android:drawableTop="@mipmap/mark_fill"
                            android:drawablePadding="@dimen/dis8"
                            android:text="待评价"
                            android:textColor="@color/C10_10_10"
                            android:textSize="@dimen/font12"/>

                        <TextView
                            android:id="@+id/frag_mine_tv_judge_num"
                            android:layout_width="@dimen/dis16"
                            android:layout_height="@dimen/dis16"
                            android:layout_alignRight="@id/frag_mine_tv4"
                            android:background="@drawable/shape_round360_e83_stroke1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/CE8_3C_3C"
                            android:textSize="@dimen/font11"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"
                android:background="@color/CED_F1_F4"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_invite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/friend"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="邀请好友"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_collection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/favor"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="我的收藏"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/location"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="地址管理"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"
                android:background="@color/CED_F1_F4"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/service"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="客服热线"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_coustom_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/ic_custom_service"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="在线客服"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>

                    <TextView
                        android:id="@+id/frag_mine_tv_coustom_service_msg_num"
                        android:layout_width="@dimen/dis16"
                        android:layout_height="@dimen/dis16"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/shape_round360_e83_stroke2"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font11"
                        android:visibility="gone"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_rl_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/settings"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="系统设置"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"
                android:background="@color/CED_F1_F4"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/frag_mine_rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dis18"
                    android:paddingBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dis18"
                        android:drawableLeft="@mipmap/discover"
                        android:drawablePadding="@dimen/dis22"
                        android:gravity="center_vertical"
                        android:text="关于我们"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis15"
                android:background="@color/CED_F1_F4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>