<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/info_center_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dis22"
        android:background="@drawable/shape_corner_dc_radius12"
        android:paddingBottom="@dimen/dis7"
        android:paddingLeft="@dimen/dis10"
        android:paddingRight="@dimen/dis10"
        android:paddingTop="@dimen/dis7"
        android:textColor="@color/white"
        android:textSize="@dimen/font11"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dis8"
        android:layout_marginLeft="@dimen/dis10"
        android:layout_marginRight="@dimen/dis10"
        android:layout_marginTop="@dimen/dis10"
        android:background="@color/white"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginTop="@dimen/dis18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_center_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dis5"
                android:textColor="@color/C10_10_10"
                android:textSize="@dimen/font15"/>

            <ImageView
                android:id="@+id/img_message_"
                android:layout_width="@dimen/dis15"
                android:layout_height="@dimen/dis15"
                android:background="@drawable/shape_circle_"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/info_center_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginRight="@dimen/dis15"
            android:layout_marginTop="@dimen/dis12"
            android:lineSpacingExtra="@dimen/dis8"
            android:maxLines="3"
            android:textColor="@color/C4B_4B_4B"
            android:textSize="@dimen/font12"
            />

        <TextView
            android:id="@+id/info_center_tv_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dis15"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginTop="@dimen/dis10"
            android:drawablePadding="@dimen/dis8"
            android:drawableRight="@drawable/more_next"
            android:text="查看详情"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font12"
            />
    </LinearLayout>

</LinearLayout>