<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dis40"
        android:layout_marginRight="@dimen/dis40"
        android:background="@drawable/shape_corner_white15"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_normal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/bg_shart_top"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/dialog_normal_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_normal_title"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dis10"
            android:layout_marginTop="@dimen/dis25"
            android:layout_marginRight="@dimen/dis10"
            android:layout_marginBottom="@dimen/dis15"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="拨打0371-55007049热线，联系官方客服"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font14"
            />


        <TextView
            android:id="@+id/tv_copy_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_normal_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dis5"
            android:background="@drawable/selector_draw"
            android:gravity="center"
            android:paddingLeft="@dimen/dis15"
            android:paddingTop="@dimen/dis4"
            android:paddingRight="@dimen/dis15"
            android:paddingBottom="@dimen/dis4"
            android:text="复制链接"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font14"/>


        <!--<Button-->
        <!--android:id="@+id/btn_register"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/dis15"-->
        <!--android:layout_marginRight="@dimen/dis15"-->
        <!--android:layout_marginTop="28dp"-->
        <!---->
        <!--android:text="提交申请"-->
        <!---->
        <!--android:textSize="@dimen/font14"-->
        <!--/>-->


        <RelativeLayout
            android:id="@+id/rl_share_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_copy_url"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dis10">

            <TextView
                android:id="@+id/tv_share_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dis15"
                android:text="去分享"

                android:textSize="@dimen/font14"/>


            <View
                android:layout_width="@dimen/dis45"
                android:layout_height="@dimen/dis0.5"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dis20"
                android:layout_toLeftOf="@id/tv_share_title"
                android:background="@color/CE7_E7_E7"/>

            <View
                android:layout_width="@dimen/dis45"
                android:layout_height="@dimen/dis0.5"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dis20"
                android:layout_toRightOf="@id/tv_share_title"
                android:background="@color/CE7_E7_E7"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_share_info"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dis20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_wechat"
                android:drawablePadding="@dimen/dis5"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/black_color1"
                android:textSize="@dimen/font14"/>

            <TextView
                android:id="@+id/tv_wChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/icon_friend"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/black_color1"
                android:textSize="@dimen/font14"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

