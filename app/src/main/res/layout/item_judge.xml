<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">

    <LinearLayout
        android:id="@+id/item_all_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dis15">

            <com.yj.cosmetics.widget.RoundedImageView.RoundedImageView
                android:id="@+id/goods_judge_iv"
                android:layout_width="@dimen/dis20"
                android:layout_height="@dimen/dis20"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_avatar"
                app:riv_oval="true"/>

            <TextView
                android:id="@+id/goods_judge_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dis8"
                android:layout_toRightOf="@id/goods_judge_iv"
                android:maxLength="6"
                android:textColor="@color/C40_40_40"
                android:textSize="@dimen/font12"/>

            <com.yj.cosmetics.widget.StarBar
                android:id="@+id/goods_judgeiv_rb"
                style="@style/RatingBarShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:starDistance="@dimen/dis5"
                app:starEmpty="@mipmap/favor_fill"
                app:starFill="@color/white"
                app:starSize="@dimen/dis12"/>

            <TextView
                android:id="@+id/goods_judge_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dis12"
                android:layout_toRightOf="@id/goods_judge_name"
                android:textColor="@color/C9E_9E_9E"
                android:textSize="@dimen/font11"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/goods_judge_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginRight="@dimen/dis15"
            android:lineSpacingExtra="@dimen/dis5"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font13"/>

        <LinearLayout
            android:id="@+id/goods_judge_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis80"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginTop="@dimen/dis10"
            android:layout_marginRight="@dimen/dis15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goods_judge_iv1"
                android:layout_width="@dimen/dis80"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_goods"/>

            <ImageView
                android:id="@+id/goods_judge_iv2"
                android:layout_width="@dimen/dis80"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dis3"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_goods"/>

            <ImageView
                android:id="@+id/goods_judge_iv3"
                android:layout_width="@dimen/dis80"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dis3"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_goods"/>
        </LinearLayout>

        <TextView
            android:id="@+id/goods_judge_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_marginTop="@dimen/dis6"
            android:layout_marginBottom="@dimen/dis8"
            android:textColor="@color/C85_85_85"
            android:textSize="@dimen/font11"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dis0.5"
            android:background="@color/CEB_F0_F6"/>
    </LinearLayout>
</LinearLayout>