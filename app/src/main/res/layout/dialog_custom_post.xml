<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dis150"
        android:layout_height="@dimen/dis60"
        android:background="@drawable/shape_corner_trans7_radius3"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/progressImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/submit"
            android:layout_centerVertical="true"

            />
        <TextView
            android:id="@+id/progressMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textSize="@dimen/font13"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/progressImg"
            android:layout_marginLeft="@dimen/dis15"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
</LinearLayout>