<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_seckill_rl_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dis15"
        android:layout_marginTop="@dimen/dis8"
        android:layout_marginBottom="@dimen/dis14"
        android:visibility="gone">

        <TextView
            android:id="@+id/home_seckill_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/spike_home"
            android:drawablePadding="@dimen/dis6"
            android:text="好物秒杀"
            android:textColor="@color/CE8_3C_3C"
            android:textSize="@dimen/font12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis10"
            android:layout_toRightOf="@id/home_seckill_tv1"
            android:text="倒计时"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dis15"
            android:drawableRight="@mipmap/round_right_fill_home"
            android:drawablePadding="@dimen/dis5"
            android:text="快秒好货"
            android:textColor="@color/CE8_3C_3C"
            android:textSize="@dimen/font11"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis1.5"
        android:layout_alignParentBottom="true"
        android:background="@color/CF7_F9_FA"/>
</LinearLayout>