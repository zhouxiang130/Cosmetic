<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:id="@+id/item_account_profit_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis8"
        android:background="@color/CF8_F9_FB"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dis10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dis15"
            android:paddingTop="@dimen/dis12"
            android:paddingRight="@dimen/dis15"
            android:paddingBottom="@dimen/dis10">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dis100"
                android:layout_weight="3.5">

                <ImageView
                    android:id="@+id/item_seckill_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dis1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_goods"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dis100"
                android:layout_marginLeft="@dimen/dis20"
                android:layout_weight="8"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_seckill_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:paddingTop="@dimen/dis2"
                    android:paddingBottom="@dimen/dis2"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font14"/>

                <TextView
                    android:id="@+id/item_seckill_tv_style"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_above="@+id/linearLayout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:paddingTop="@dimen/dis2"
                    android:paddingBottom="@dimen/dis2"
                    android:textColor="@color/C85_85_85"
                    android:textSize="@dimen/font12"/>

                <TextView
                    android:id="@+id/item_seckill_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/dis2"
                    android:paddingBottom="@dimen/dis2"
                    android:textColor="@color/C64_64_64"
                    android:textSize="@dimen/font13"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dis2"
                    android:paddingBottom="@dimen/dis2">

                    <TextView
                        android:id="@+id/item_seckill_tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/CE8_3C_3C"
                        android:textSize="@dimen/font14"/>

                    <TextView
                        android:id="@+id/item_seckill_tv_op"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dis8"
                        android:textColor="@color/C85_85_85"
                        android:textSize="@dimen/font10"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_seckill_tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_above="@id/item_seckill_tv_time"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:background="@drawable/shape_corner_pink_radius3"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dis15"
                    android:paddingTop="@dimen/dis3"
                    android:paddingRight="@dimen/dis15"
                    android:paddingBottom="@dimen/dis3"
                    android:text="即将开抢"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE9_EC_ED"/>
</LinearLayout>