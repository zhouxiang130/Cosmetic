<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/item_account_profit_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis8"
        android:background="@color/CF8_F9_FB"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dis10"
        android:paddingLeft="@dimen/dis15"
        android:paddingTop="@dimen/dis12"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dis15"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_scoring_detial_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/CE8_3C_3C"
                android:textSize="@dimen/font18"
                />

            <TextView
                android:id="@+id/item_scoring_detial_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dis5"
                android:maxLines="1"
                android:textColor="@color/C64_64_64"
                android:textSize="@dimen/font11"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_scoring_detial_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dis6"
            android:layout_marginRight="@dimen/dis10"
            android:maxLines="1"
            android:textColor="@color/C10_10_10"
            android:textSize="@dimen/font12"/>

        <TextView
            android:id="@+id/item_scoring_detial_agent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_scoring_detial_name"
            android:layout_marginLeft="@dimen/dis5"
            android:layout_marginTop="@dimen/dis10"
            android:maxLines="1"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font11"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_scoring_detial_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_scoring_detial_agent"
            android:layout_marginLeft="@dimen/dis5"
            android:layout_marginTop="@dimen/dis10"
            android:maxLines="1"
            android:textColor="@color/C64_64_64"
            android:textSize="@dimen/font11"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dis0.5"
        android:background="@color/CE7_E7_E7"
        />
</LinearLayout>