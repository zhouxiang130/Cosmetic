<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/titlebar_layout"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_regist_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:src="@mipmap/profile"/>

                <TextView
                    android:id="@+id/user_forgot_tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_toRightOf="@id/user_regist_tv1"
                    android:text="请输入注册手机号"
                    android:textColor="@color/C88_88_88"
                    android:textSize="@dimen/font15"/>

                <EditText
                    android:id="@+id/user_forgot_et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_toRightOf="@id/user_regist_tv1"
                    android:background="@null"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingTop="@dimen/dis20"
                    android:paddingBottom="@dimen/dis20"
                    android:singleLine="true"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginRight="@dimen/dis15"
                android:background="@color/CE4_E4_E4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_forgot_tv_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dis15"
                    android:background="@drawable/shape_corner_e8_radius12"
                    android:paddingLeft="@dimen/dis14"
                    android:paddingTop="@dimen/dis5"
                    android:paddingRight="@dimen/dis14"
                    android:paddingBottom="@dimen/dis5"
                    android:text="获取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14"/>

                <ImageView
                    android:id="@+id/user_regist_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:src="@mipmap/code_id"/>

                <TextView
                    android:id="@+id/user_forgot_tv_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_toRightOf="@id/user_regist_tv2"
                    android:text="请输入验证码"
                    android:textColor="@color/C88_88_88"
                    android:textSize="@dimen/font15"/>

                <EditText
                    android:id="@+id/user_forgot_et_verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_marginRight="@dimen/dis15"
                    android:layout_toLeftOf="@id/user_forgot_tv_send"
                    android:layout_toRightOf="@id/user_regist_tv2"
                    android:background="@null"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:paddingTop="@dimen/dis20"
                    android:paddingBottom="@dimen/dis20"
                    android:singleLine="true"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginRight="@dimen/dis15"
                android:background="@color/CE4_E4_E4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_regist_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:src="@mipmap/lock"/>

                <TextView
                    android:id="@+id/user_forgot_tv_newpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_toRightOf="@id/user_regist_tv3"
                    android:text="请设置登录密码"
                    android:textColor="@color/C88_88_88"
                    android:textSize="@dimen/font15"/>

                <EditText
                    android:id="@+id/user_forgot_et_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_marginRight="@dimen/dis80"
                    android:layout_toRightOf="@id/user_regist_tv3"
                    android:background="@null"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dis20"
                    android:paddingBottom="@dimen/dis20"
                    android:singleLine="true"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginRight="@dimen/dis15"
                android:background="@color/CE4_E4_E4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/user_regist_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:src="@mipmap/lock"/>

                <TextView
                    android:id="@+id/user_forgot_tv_newconfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_toRightOf="@id/user_regist_tv4"
                    android:text="再次确认登录密码"
                    android:textColor="@color/C88_88_88"
                    android:textSize="@dimen/font15"/>

                <EditText
                    android:id="@+id/user_forgot_et_newconfirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:layout_marginRight="@dimen/dis80"
                    android:layout_toRightOf="@id/user_regist_tv4"
                    android:background="@null"
                    android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dis20"
                    android:paddingBottom="@dimen/dis20"
                    android:singleLine="true"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginRight="@dimen/dis15"
                android:background="@color/CE4_E4_E4"/>

            <Button
                android:id="@+id/user_forgot_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis40"
                android:layout_marginLeft="@dimen/dis15"
                android:layout_marginTop="@dimen/dis32"
                android:layout_marginRight="@dimen/dis15"
                android:background="@drawable/shape_corner_e8_radius2"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/font14"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>