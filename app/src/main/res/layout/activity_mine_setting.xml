<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/CF8_F8_F8"
              android:orientation="vertical">

    <include layout="@layout/titlebar_layout"/>

    <com.yj.cosmetics.widget.UserDefineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis8"
                android:background="@color/CF8_F8_F8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <RelativeLayout
                android:id="@+id/mine_setting_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dis18"
                android:layout_marginBottom="@dimen/dis18"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dis15"
                    android:text="接收消息通知"
                    android:textColor="@color/C1E_1E_1E"
                    android:textSize="@dimen/font15"/>

                <com.yj.cosmetics.widget.SwitchView
                    android:id="@+id/settlement_cart_switch_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dis28"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dis15"
                    app:isOpened="false"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/mine_setting_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dis18"
                    android:layout_marginBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis15"
                        android:text="版本更新"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>

                    <TextView
                        android:id="@+id/mine_setting_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dis15"
                        android:textColor="@color/C64_64_64"
                        android:textSize="@dimen/font15"/>

                    <ImageView
                        android:id="@+id/iv_update_red"
                        android:layout_width="@dimen/dis8"
                        android:layout_height="@dimen/dis8"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dis5"
                        android:layout_toLeftOf="@id/mine_setting_version"
                        android:src="@drawable/shape_round360_e83"
                        android:visibility="gone"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/mine_setting_clean"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dis18"
                    android:layout_marginBottom="@dimen/dis18">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis15"
                        android:text="清除缓存"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>

                    <TextView
                        android:id="@+id/mine_setting_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dis15"
                        android:textSize="@dimen/font14"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis6"
                android:background="@color/CF8_F8_F8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <com.yj.cosmetics.widget.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/mine_setting_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dis18"
                    android:layout_marginBottom="@dimen/dis18"
                    android:paddingRight="@dimen/dis15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dis15"
                        android:text="求助反馈"
                        android:textColor="@color/C1E_1E_1E"
                        android:textSize="@dimen/font15"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/next_center_order"
                        android:textSize="@dimen/font14"/>
                </RelativeLayout>
            </com.yj.cosmetics.widget.MaterialRippleLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis50"
                android:background="@color/CF8_F8_F8"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/mine_setting_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dis50"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textColor="@color/CE8_3C_3C"
                    android:textSize="@dimen/font16"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>
        </LinearLayout>
    </com.yj.cosmetics.widget.UserDefineScrollView>
</LinearLayout>