<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/no_info_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dis80"
            android:background="@mipmap/zanwuyouhuiquan"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/no_info_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dis25"
            android:text="暂无优惠券"
            android:textColor="@color/C85_85_85"
            android:textSize="@dimen/font13"/>


    </RelativeLayout>
</LinearLayout>