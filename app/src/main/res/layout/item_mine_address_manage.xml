<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dis6"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dis15"
                android:paddingTop="@dimen/dis12"
                android:paddingRight="@dimen/dis15"
                android:paddingBottom="@dimen/dis12">

                <TextView
                    android:id="@+id/manage_address_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人 :  "
                    android:textColor="@color/C1E_1E_1E"
                    android:textSize="@dimen/font15"/>

                <TextView
                    android:id="@+id/manage_address_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dis2"
                    android:textColor="@color/C1E_1E_1E"
                    android:textSize="@dimen/font15"/>

                <TextView
                    android:id="@+id/manage_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dis5"
                    android:layout_toLeftOf="@id/manage_address_tel"
                    android:layout_toRightOf="@id/manage_address_tv1"
                    android:singleLine="true"
                    android:textColor="@color/C1E_1E_1E"
                    android:textSize="@dimen/font15"/>

                <TextView
                    android:id="@+id/manage_address_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/manage_address_tv1"
                    android:layout_marginTop="@dimen/dis18"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/dis5"
                    android:maxLines="2"
                    android:textColor="@color/C64_64_64"
                    android:textSize="@dimen/font13"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dis0.5"
                android:background="@color/CE7_E7_E7"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dis5"
                android:layout_marginRight="@dimen/dis15">

                <RelativeLayout
                    android:id="@+id/manage_address_checkrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingLeft="@dimen/dis10"
                    android:paddingTop="@dimen/dis10"
                    android:paddingRight="@dimen/dis12"
                    android:paddingBottom="@dimen/dis10">

                    <CheckBox
                        android:id="@+id/manage_address_cb"
                        android:layout_width="@dimen/dis17"
                        android:layout_height="@dimen/dis17"
                        android:layout_centerVertical="true"
                        android:button="@drawable/selector_checkbox_address"
                        android:clickable="false"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/manage_address_checkrl"
                    android:text="默认地址"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font12"/>

                <TextView
                    android:id="@+id/manage_address_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/delete_sh"
                    android:drawablePadding="@dimen/dis5"
                    android:text="删除"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font12"/>

                <TextView
                    android:id="@+id/manage_address_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/manage_address_delete"
                    android:drawableLeft="@mipmap/edit"
                    android:drawablePadding="@dimen/dis5"
                    android:text="编辑"
                    android:textColor="@color/C10_10_10"
                    android:textSize="@dimen/font12"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_address_masking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/C8d_ce_ce_ce"
            android:visibility="visible">
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>